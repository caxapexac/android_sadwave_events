<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/event_card_margin"
    app:cardBackgroundColor="@color/design_default_color_surface"
    app:cardCornerRadius="@dimen/event_corners_radius"
    app:cardElevation="@dimen/event_card_elevation">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_rounded"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="@dimen/fab_margin"
            android:adjustViewBounds="true"
            android:background="@drawable/shape_rounded"
            android:contentDescription="@string/cd_event_image"
            android:scaleType="fitStart"
            tools:srcCompat="@drawable/default_image" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="@dimen/fab_margin"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="@dimen/text_event_title_size"
            tools:text="FXD:ЗИМА" />

        <LinearLayout
            android:id="@+id/dateplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="@dimen/fab_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_rd_school_calendar_white"
                android:drawableLeft="@drawable/ic_rd_school_calendar_white"
                android:drawablePadding="@dimen/text_event_drawable_padding"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="@dimen/text_event_header_size"
                tools:text="22 августа, Воскресенье" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="@dimen/fab_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_rd_time_white"
                android:drawableLeft="@drawable/ic_rd_time_white"
                android:drawablePadding="@dimen/text_event_drawable_padding"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="@dimen/text_event_header_size"
                tools:text="16:00" />

            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:drawableStart="@drawable/ic_rd_place_white"
                android:drawableLeft="@drawable/ic_rd_place_white"
                android:drawablePadding="@dimen/text_event_drawable_padding"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="@dimen/text_event_header_size"
                android:visibility="gone"
                tools:text="Клуб «Плутон»" />

        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="@dimen/fab_margin"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/text_event_content_size"
            tools:text="@tools:sample/lorem/random[0]" />

        <LinearLayout
            android:id="@+id/itemsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="@dimen/fab_margin"
            android:gravity="end">

            <ImageButton
                android:id="@+id/calendar"
                style="@style/Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/cd_calendar"
                android:padding="8dp"
                android:tint="#39853C"
                app:srcCompat="@drawable/ic_calendar" />

            <ImageButton
                android:id="@+id/share"
                style="@style/Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/cd_share"
                android:padding="8dp"
                android:tint="#39853C"
                app:srcCompat="@drawable/ic_share" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>